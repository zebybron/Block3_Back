# Variables d'environnement pour le Backend
# Copiez ce fichier vers .env et modifiez les valeurs

NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/collector_db

# JWT (⚠️ CHANGEZ CE SECRET EN PRODUCTION)
JWT_SECRET=changez_ce_secret_en_production_avec_une_longue_chaine_aleatoire
JWT_EXPIRES_IN=24h

# Rate Limiting (requêtes par fenêtre de temps)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
